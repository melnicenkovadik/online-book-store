{
  "name": "online-books-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 3000",
    "build": "next build --turbopack",
    "start": "next start",
    "lint:ts": "tsc --noEmit",
    "lint": "biome check",
    "format": "biome format --write",
    "snapshot:src": "node scripts/create-snapshot.js src src-snapshot.md",
    "snapshot:components": "node scripts/create-snapshot.js src/components components-snapshot.md",
    "snapshot:uikit": "node scripts/create-snapshot.js src/components/uikit uikit-snapshot.md",
    "snapshot:api": "node scripts/create-snapshot.js src/app/api api-snapshot.md",
    "snapshot:full": "node scripts/create-snapshot.js . project-snapshot.md",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slider": "^1.3.6",
    "@types/react-dropzone": "^4.2.2",
    "classnames": "^2.5.1",
    "cloudinary": "^2.7.0",
    "mongoose": "^8.7.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-zoom-pan-pinch": "^3.7.0",
    "swr": "^2.3.6",
    "zod": "^4.1.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "sass": "^1.77.0",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check",
      "tsc-files --noEmit"
    ],
    "*.{json,md}": [
      "biome check"
    ]
  }
}
